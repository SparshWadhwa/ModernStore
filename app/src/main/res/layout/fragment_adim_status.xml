<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sparshwadhwa.modernstore.adim_status">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/genre_available"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/genre_available"
        android:layout_marginTop="15dp"
        android:text="AVAILABILITY/UNAVAILABILITY" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="23dp"
        android:text="Select Genre" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/genre_item_available"
        android:layout_alignLeft="@+id/genre_item_available"
        android:layout_alignStart="@+id/genre_item_available"
        android:layout_marginBottom="19dp"
        android:text="select genre item" />

    <Spinner
        android:id="@+id/genre_available"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="14dp" />

    <Spinner
        android:id="@+id/genre_item_available"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/check_status_buttn"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginBottom="14dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/status_check"
        android:layout_alignBottom="@+id/status_check"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_toLeftOf="@+id/status_check"
        android:layout_toStartOf="@+id/status_check"
        android:text="current status" />

    <TextView
        android:id="@+id/status_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/change_status"
        android:layout_alignEnd="@+id/get_genreitem_buttn"
        android:layout_alignRight="@+id/get_genreitem_buttn"
        android:layout_marginBottom="58dp"
        android:text="checking status" />

    <Button
        android:id="@+id/change_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dp"
        android:text="change status" />

    <Button
        android:id="@+id/check_status_buttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="check status" />

    <Button
        android:id="@+id/get_genreitem_buttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/change_status"
        android:layout_alignStart="@+id/change_status"
        android:layout_below="@+id/genre_available"
        android:text="get genre items" />

    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/status_check"
        android:layout_toRightOf="@+id/status_check"
        android:text="TextView" />


</RelativeLayout>
