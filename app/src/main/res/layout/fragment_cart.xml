<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sparshwadhwa.modernstore.cart">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Mr. Rakesh Pathak"
               android:textAllCaps="true"
               android:textStyle="bold"
               android:textColor="#000"
               android:id="@+id/cus_name"
               android:padding="10dp"
               android:textSize="20sp"/>
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:scaleType="fitCenter"
               android:layout_margin="10dp"
               android:src="@drawable/edit"
               android:layout_alignParentEnd="true"
               android:layout_alignParentRight="true"
               
               />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/address"
               android:textColor="#000"
               android:text="B 607 A, Double Storey"
               android:textStyle="italic"
               android:padding="10dp"
               android:layout_below="@+id/cus_name"
               android:textSize="20sp"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/area"
               android:padding="10dp"
               android:layout_below="@+id/address"
               android:textColor="@color/colorAccent"
               android:text="brij vihar gaziabad 1110000"/>
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#504d4d"
               android:layout_margin="4dp"
               android:layout_below="@+id/area"
               android:id="@+id/view" />

           <View
               android:layout_width="100dp"
               android:layout_height="8dp"
               android:layout_centerInParent="true"
               android:layout_below="@+id/area"
               android:background="@color/colorAccent" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textAllCaps="true"
               android:text="ITEM"
               android:textColor="#000"
               android:textStyle="bold"
               android:id="@+id/item_text"
               android:layout_below="@+id/view"
               android:layout_marginLeft="30dp"
               android:layout_marginBottom="10dp"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textAllCaps="true"
               android:text="QUantitiy"
               android:textColor="#000"
               android:textStyle="bold"
android:layout_centerInParent="true"
               android:layout_below="@+id/view"
               android:layout_marginLeft="30dp"
               android:layout_marginBottom="10dp"/>
           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/payment"
           android:layout_below="@+id/total_text"
               android:layout_centerHorizontal="true"
               android:background="#c23e16"
               android:padding="20dp"
               android:text="Continue to Payment"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
android:layout_below="@+id/view3"
               android:text="Total"
               android:textColor="#000"
               android:textStyle="bold"
               android:id="@+id/total_text"
               android:textSize="20dp"
               android:layout_marginLeft="50sp"
               android:layout_marginBottom="40sp"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/totalcost"
               android:layout_toRightOf="@+id/total_text"
               android:text="Rs. 160"
               android:textSize="20dp"
               android:textColor="#000"
               android:textStyle="bold"
               android:gravity="end"
               android:layout_marginRight="50dp"
               android:layout_alignParentEnd="true"
               android:layout_alignParentRight="true"
               android:layout_marginBottom="40sp"
               android:layout_below="@+id/view3"/>
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/colorAccent"
               android:layout_margin="4dp"
android:layout_below="@+id/listView"
               android:id="@+id/view3" />
           <ListView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/listView"
               android:layout_below="@+id/item_text">

           </ListView>
       </RelativeLayout>

   </LinearLayout>

</FrameLayout>
